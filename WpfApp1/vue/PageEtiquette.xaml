        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.vue"
        mc:Ignorable="d"
        Title="Page d'etiquette" Height="29cm" Width="30cm" Closed="Window_Closed">
    <StackPanel Orientation="Horizontal">
        <StackPanel Name="ToPrint" Height="29cm" Width="21cm">
            <StackPanel Orientation="Horizontal">
                <UserControl Name="eti0" Height="9cm" Width="9CM">

                </UserControl>
                <UserControl Name="eti1" Height="9cm" Width="9CM">

