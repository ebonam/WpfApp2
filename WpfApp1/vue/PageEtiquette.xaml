                </UserControl>
                <Label Width="1CM"></Label>
                <UserControl Name="eti5" Height="9cm" Width="9CM">

                </UserControl>

            </StackPanel>
        </StackPanel>
        <StackPanel>
            <Label FontWeight="Bold">Creer et imprimer Etiquettes</Label>
            <StackPanel Orientation="Horizontal">
                <Label>Etiquette 1</Label>
                <Button Name="add0" Click="Button_Ajouter" Tag="0" Margin="20,0">Ajouter</Button>
                <Button Name="del0" Click="Button_Annuler" Tag="0">Supprimer</Button>
            </StackPanel>
            <Label></Label>
            <StackPanel Orientation="Horizontal">
                <Label>Etiquette 2</Label>
                <Button Name="add1" Click="Button_Ajouter" Tag="1" Margin="20,0">Ajouter</Button>
                <Button Name="del1" Click="Button_Annuler" Tag="1">Supprimer</Button>
            </StackPanel>
            <Label></Label>
            <StackPanel Orientation="Horizontal">
                <Label>Etiquette 3</Label>
                <Button Name="add2" Click="Button_Ajouter" Tag="2" Margin="20,0">Ajouter</Button>
                <Button Name="del2" Click="Button_Annuler" Tag="2">Supprimer</Button>
            </StackPanel>
            <Label></Label>
            <StackPanel Orientation="Horizontal">
                <Label>Etiquette 4</Label>
                <Button Name="add3" Click="Button_Ajouter" Tag="3" Margin="20,0">Ajouter</Button>
