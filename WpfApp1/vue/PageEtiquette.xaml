            </StackPanel>
            <Label></Label>
            <StackPanel Orientation="Horizontal">
                <Label>Etiquette 5</Label>
                <Button Name="add4" Click="Button_Ajouter" Tag="4" Margin="20,0">Ajouter</Button>
                <Button Name="del4" Click="Button_Annuler" Tag="4">Supprimer</Button>
            </StackPanel>


            <Label></Label>
            <StackPanel Orientation="Horizontal">
                <Label>Etiquette 6</Label>
                <Button Name="add5" Click="Button_Ajouter" Tag="5" Margin="20,0">Ajouter</Button>
                <Button Name="del5" Click="Button_Annuler" Tag="5">Supprimer</Button>
            </StackPanel>
            <Button  Click="Button_print">Imprimer</Button>
            
            <Label></Label>
            <StackPanel Name="cp" Visibility="Hidden">
                <Label>Coller l'etiquette ci dessous</Label>
                <TextBox Name="tb" Height="203" AcceptsReturn="True" AcceptsTab="True"></TextBox>
                <Button Name="addtag" Click="Button_AjouterEtiquette">Ajouter</Button>
                
            </StackPanel>
        </StackPanel>

    </StackPanel>
</Window>